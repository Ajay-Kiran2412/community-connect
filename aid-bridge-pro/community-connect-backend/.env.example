# Example environment variables for community-connect-backend
# Copy this to .env and fill with your real values (DO NOT commit secrets)

MONGODB_URI=mongodb://localhost:27017/community-connect
PORT=5000
NODE_ENV=development

# JWT settings
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Optional: enable request logging
# NODE_ENV=development

# Admin token for protected dev-only endpoints (set to a strong random value)
ADMIN_TOKEN=your_admin_token_here

# Automatically verify newly created accounts when true (useful for local development)
# If NODE_ENV is not 'production', AUTO_VERIFY defaults to true in the controller.
AUTO_VERIFY=true
